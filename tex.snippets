snippet eq "Equation" i
\begin{equation}
    $1
\end{equation}
$0
endsnippet

snippet ff "Fraction" i
\frac{$1}{$2}$0
endsnippet

snippet int "Integral" i
\int_{$1}^{$2} $3 dx$0
endsnippet

snippet sum "Summation" i
\sum_{${1:i=1}}^{${2:n}} $0
endsnippet

snippet pder "Partial Derivative" i
\frac{\pd $1}{\pd $2}$0
endsnippet

snippet init "Just start" i
\documentclass{article}
\usepackage[$1]{michal}
\title{$2}
\author{$3}

\begin{document}
\maketitle
\end{document}
endsnippet

snippet grad "grad" i
\nabla $0
endsnippet

snippet div "div" i
\nabla\cdot $0
endsnippet

snippet curl "curl" i
\nabla\times $0
endsnippet

snippet def "Definition" i
\begin{definition}
    $1
\end{definition}
$0
endsnippet

snippet lem "Lemma" i
\begin{lemma}
    $1
\end{lemma}
$0
endsnippet

snippet thm "Theorem" i
\begin{theorem}
    $1
\end{theorem}
$0
endsnippet

snippet prot "Protocol" i
\begin{protocol}
    $1
\end{protocol}
$0
endsnippet

snippet item "Itemizing" i
\begin{itemize}
    \item $1
\end{itemize}
$0
endsnippet

snippet enum "Enumerating" i
\begin{enumerate}
    \item $1
\end{enumerate}
$0
endsnippet

snippet pf "Proof" i
\begin{proof}
    $1
\end{proof}
$0
endsnippet
