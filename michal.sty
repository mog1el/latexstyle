\ProvidesPackage{michal}

% basic
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
\RequirePackage{amsmath, amssymb, amsthm, mathtools}

% Notation
\newcommand{\CC}{\mathbb C}
\newcommand{\FF}{\mathbb F}
\newcommand{\NN}{\mathbb N}
\newcommand{\QQ}{\mathbb Q}
\newcommand{\RR}{\mathbb R}
\newcommand{\ZZ}{\mathbb Z}
\newcommand{\OO}{\emptyset}
\newcommand{\pd}{\partial}
\newcommand{\st}{\mid}
\let\normforall\forall
\renewcommand{\forall}{\normforall \,}
\let\normexists\exists
\renewcommand{\exists}{\normexists \,}
\renewcommand{\therefore}{\therefore \quad}
\renewcommand{\because}{\because \quad}
\DeclareMathOperator{\Img}{Img} 
\DeclareMathOperator{\Ker}{Ker}
\DeclareMathOperator{\Tr}{Tr}

% Theorems
\newtheorem{theorem}{Theorem}[section]
\newtheorem{corollary}{Corollary}[theorem]
\newtheorem{lemma}[theorem]{Lemma}

% Header and footer handling
\makeat
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\makeatletter
\fancyhead[L]{\@author}
\fancyhead[R]{\leftmark}
\fancyfoot[C]{\thepage}

% Different maketitle for different types
\DeclareOption{handout}{\renewcommand{\maketitle}{
\thispagestyle{empty}
\addtocounter{page}{-1}
\begin{center}
	\vspace*{0.5cm}

	\Huge
	\textbf{\@title}

	\vspace*{0.5cm}
	\LARGE
	\@author

	\vspace*{0.5cm}
\end{center}
\tableofcontents
}}
\makeatother

\ProcessOptions\relax
